'? ' + [ALT T_SHIFT] > context layer("shift")
'! ' + [ALT T_SHIFT] > context layer("shift")
'‽ ' + [ALT T_SHIFT] > context layer("shift")
'.) ' + [ALT T_SHIFT] > context layer("shift")
+ [ALT T_SHIFT] > layer("default")

