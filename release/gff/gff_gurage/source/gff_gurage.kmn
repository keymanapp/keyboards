  any(ዘመደ፡ሣልስ)  + "'" > index(ዘመደ፡ሣልስ,1) deadkey(1)
  any(ሳድስ)      + "'" > index(ሳድስ,1) deadkey(1)
  any(ሣልስ)      + "'" > index(ሣልስ,1) deadkey(1)
  deadkey(1)    + "'" > "'"


  + [SHIFT K_SPACE] > '፡'
      + ':' > '፡'
  '፡' + ':' > '።'
  '።' + ':' > ':'
  ':' + ':' > '፡'  c makes circular
  '፡' + '+' > '፠'
  '፡' + '#' > '፨'

      + ',' > '፣'
  '፣' + ',' > '፥'
  '፥' + ',' > ','
  ',' + ',' > '፣'  c makes circular

      + ';' > '፤'
  '፤' + ';' > ';'
  ';' + ';' > '፤'  c makes circular

  '፡' + '-' > '፦'

      + '<' > '‹'
      + '>' > '›'
  '‹' + '<' > '«'
  '›' + '>' > '»'
  '«' + '<' > '<'
c ---------------------End Input of Punctuation-------------------------------------------------

