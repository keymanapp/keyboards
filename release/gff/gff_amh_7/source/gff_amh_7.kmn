  'እ' + any(rabI-key) > 'ኣ'
  'ኢ' + any(gIz-key)  > 'ኤ'
  'እ' + any(sabI-key) > 'ኦ'

c Aynu-A Vowels as Regular Syllables
  'እ' + any(gIz-key)  > 'ዕ'
  'ዕ' + any(gIz-key)  > 'ዐ'
  'ዕ' + any(kaIb-key) > 'ዑ'
  'ዕ' + any(sals-key) > 'ዒ'
  'ዕ' + any(rabI-key) > 'ዓ'
  'ዒ' + any(gIz-key)  > 'ዔ'
  'ዕ' + any(sabI-key) > 'ዖ'

c Aynu-A Vowels as Vowels
  'ኡ' + any(kaIb-key) > 'ዑ'
  'ኢ' + any(sals-key) > 'ዒ'
  'ኦ' + any(sabI-key) > 'ዖ'

c Completing the Amharic "a" chain:
  'አ' + any(rabI-key) > 'ዓ'
  'ዓ' + any(rabI-key) > 'ዐ'
  'ዐ' + any(rabI-key) > 'ኣ'

c ---------------------End Input of Lone Vowels-------------------------------------------------

