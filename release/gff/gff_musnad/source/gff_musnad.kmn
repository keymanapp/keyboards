c ===========================================================================
c
c The Ge'ez Frontier Foundation's input method for Musnad script on US-QWERTY
c keyboards for SIL Keyman, compliant with Unicode 5.2 and later.
c
c ===========================================================================

store(&VERSION) '10.0'
store(&NAME) '𐩣𐩯𐩬𐩵 (Musnad)'
store(&COPYRIGHT) '© 2020 The Ge' U+0027 'ez Frontier Foundation'
store(&KEYBOARDVERSION) '1.0'
store(&TARGETS) 'any'
store(&VISUALKEYBOARD) 'gff_musnad.kvks'
store(&LAYOUTFILE) 'gff_musnad.keyman-touch-layout'
store(&KMW_RTL) '1'

store(alefVowels) 'aeiou'
store(aynVowels) 'AEIOU'
store(noMap) 'cjvCJV'
store(&BITMAP) 'gff_musnad.ico'

begin Unicode > use(main)

group(main) using keys
+ '#' > '𐩿'
'𐩿' + '#' > '#'
+ '1' > '𐩽'
+ '2' > '𐩽𐩽'
+ '3' > '𐩽𐩽𐩽'
+ '4' > '𐩽𐩽𐩽𐩽'
+ '5' > '𐩭'
+ '6' > '𐩭𐩽'
+ '7' > '𐩭𐩽𐩽'
+ '8' > '𐩭𐩽𐩽𐩽'
+ '9' > '𐩭𐩽𐩽𐩽𐩽'
+ '0' > '𐩲'


'𐩽𐩽'    + '0' > '𐩲𐩲'  c 20
'𐩽𐩽𐩽   '+ '0' > '𐩲𐩲𐩲'  c 30
'𐩽𐩽𐩽𐩽'  + '0' > '𐩲𐩲𐩲𐩲'  c 40
'𐩭'   + '0' > '𐩾'   c 50
'𐩭𐩽'   + '0' > '𐩾𐩲'  c 60
'𐩭𐩽𐩽'  + '0' > '𐩾𐩲𐩲'  c 70
'𐩭𐩽𐩽𐩽'  + '0' > '𐩾𐩲𐩲𐩲' c 80
'𐩭𐩽𐩽𐩽𐩽' + '0' > '𐩾𐩲𐩲𐩲𐩲' c 90

'𐩽' + '0' > '𐩲'
'𐩲' + '0' > '𐩣'   c 100
'𐩣' + '0' > '𐩱'  c 1000


+ 'h' > '𐩠'
+ 'l' > '𐩡'
+ 'L' > '𐩡'
+ 'H' > '𐩢'
+ 'm' > '𐩣'
+ 'M' > '𐩣'
+ 'q' > '𐩤'
+ 'Q' > '𐩤'
+ 'w' > '𐩥'
+ 'W' > '𐩥'
'𐩪' + 's'  > '𐩦'
+ 'r' > '𐩧'
+ 'R' > '𐩧'
+ 'b' > '𐩨'
+ 'B' > '𐩨'
+ 't' > '𐩩'
'𐩩' +  'h' > '𐩻'
+ 's' > '𐩪'
+ 'k' > '𐩫'
+ 'K' > '𐩫'
+ 'n' > '𐩬'
+ 'N' > '𐩬'
'𐩠' + 'h' > '𐩭'
+ 'x' > '𐩭'
+ 'X' > '𐩭'
+ 'S' > '𐩮'
'𐩮' + 'S'  > '𐩯'
+ 'f' > '𐩰'
+ 'F' > '𐩰'
+ 'p' > '𐩰'
+ 'P' > '𐩰'
+ any(alefVowels) > '𐩱'
+ any(aynVowels) > '𐩲'
+ 'D' > '𐩳'
+ 'g' > '𐩴'
+ 'd' > '𐩵'
'𐩵' + 'd' > '𐩹'
+ 'G' > '𐩶'
+ 'T' > '𐩷'
+ 'z' > '𐩸'
+ 'y' > '𐩺'
+ 'Y' > '𐩻'
+ 'Z' > '𐩼'

+ any(noMap) > beep
