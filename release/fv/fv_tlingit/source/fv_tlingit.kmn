c combining character rules

c --MACRON--
c if macron comes after kgx, it is macron
store(macronkey) [K_SLASH] [T_B]
store(needsmacron) 'gkxGKX'
any(needsmacron) + any(macronkey) > index(needsmacron,1) U+0331
U+0331 + any(macronkey) > U+0331

c --ACCENTS--
store(accentkey) [K_COLON] [K_LBRKT] [K_BKQUOTE]
store(mobileaccentkey) [T_R] [T_V] [T_F]
store(combiningaccent) U+0301 U+0302 U+0300
store(vowels) 'aeiouAEIOUąęįǫųĄĘĮǪŲ'

c if accent key is pressed after vowel (or ogonek vowel) add new accent
any(vowels) + any(accentkey) > index(vowels,1) index(combiningaccent,2)
any(vowels) + any(mobileaccentkey) > index(vowels,1) index(combiningaccent,2)
c if accent key pressed after accent, replace the accent
any(combiningaccent) + any(accentkey) > index(combiningaccent,2)
any(combiningaccent) + any(mobileaccentkey) > index(combiningaccent,2)

c --OGONEK--
store(ogonekkey) [K_BKSLASH] [SHIFT K_BKSLASH] [T_Q]
store(ogonekvowels) 'ąęįǫųĄĘĮǪŲąęįǫųĄĘĮǪŲ'

c if ogonek key pressed after vowel (optional accent), change to ogonek vowel
any(vowels) + any(ogonekkey) > index(ogonekvowels,1)
any(vowels) any(combiningaccent) + any(ogonekkey) > index(ogonekvowels,1) index(combiningaccent,2)

store(shiftedaccentkey) [SHIFT K_COLON] [SHIFT K_LBRKT] [SHIFT K_BKQUOTE] c desktop only

c if shifted accent key pressed after vowel or ogonek vowel, turn to ogonek vowel + accent
any(vowels) + any(shiftedaccentkey) > index(ogonekvowels,1) index(combiningaccent,2)
c if shifted accent key pressed after accent, ensure ogonek vowel and replace accent
any(vowels) any(combiningaccent) + any(shiftedaccentkey) > index(ogonekvowels,1) index(combiningaccent,3)

