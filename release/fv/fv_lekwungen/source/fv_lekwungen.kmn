c mobile glottal apostrophe deadkey for rounded sounds kʷ, qʷ
'kʷ' + [T_J] > 'k̓ʷ'
'kʷ' + [SHIFT T_J] > 'k̓ʷ'
'Kʷ' + [T_J] > 'K̓ʷ'
'Kʷ' + [SHIFT T_J] > 'K̓ʷ'
'qʷ' + [T_J] > 'q̓ʷ'
'qʷ' + [SHIFT T_J] > 'q̓ʷ'
'Qʷ' + [T_J] > 'Q̓ʷ'
'Qʷ' + [SHIFT T_J] > 'Q̓ʷ'


c --- END OF TOUCH LAYOUT RULES ---


c **********************
c Constraints and Rules
c **********************


c Acute and grave accent rules
store(plainVowels) "aeiouAEIOU"
store(acuteVowels) "áéíóúÁÉÍÓÚ" c combined unicode characters
store(graveVowels) "àèìòùÀÈÌÒÙ" c combined unicode characters

store(acuteKeys) [T_acute] [SHIFT T_acute] [K_COLON]
any(plainVowels) + any(acuteKeys) > index(acuteVowels,1)

store(graveKeys) [K_QUOTE]
any(plainVowels) + any(graveKeys) > index(graveVowels,1)

any(acuteVowels) + [K_BKSP] > index(plainVowels,1) c backspace on accented vowel will leave the plain vowel behind
any(graveVowels) + [K_BKSP] > index(plainVowels,1) 

store(schwa) "əƏ"
any(schwa) + any(acuteKeys) > index(schwa,1) U+0301 c acute on schwa
any(schwa) + any(graveKeys) > index(schwa,1) U+0300 c grave on schwa

c Caron diacritic - backspace will delete just the caron on letters with caron
store(noCaron) "csCS"
store(withCaron) "čšČŠ"
any(withCaron) + [K_BKSP] > index(noCaron,1)

c Glottal apostrophe combining rules
store(noGlottal) 'cčwkpqtƛlmnŋyCČWKPQTLMNY'
store(glottalKeys) [T_J] [SHIFT T_J] [K_BKSLASH]
any(noGlottal) + any(glottalKeys) > index(noGlottal,1) U+0313


c Stacking prevention rules

store(NumbersAndPunctuation) '1234567890-=[]\;,./`~!@#$%^&*()_+{}|:"<>?' "'"  c preventing accents on non-letters
any(NumbersAndPunctuation) + any(glottalKeys) > context beep                   
any(NumbersAndPunctuation) + any(acuteKeys) > context beep
any(NumbersAndPunctuation) + any(graveKeys) > context beep


any(acuteVowels) + any(acuteKeys) > context beep c no double stacking accent on already accented V
any(acuteVowels) + any(graveKeys) > context beep

any(graveVowels) + any(graveKeys) > context beep
any(graveVowels) + any(acuteKeys) > context beep

U+0313 + any(glottalKeys) > context beep c no double stacking diacritics
U+0301 + any(acuteKeys) > context beep
U+0300 + any(graveKeys) > context beep

U+0313 + any(acuteKeys) > context beep c no stacking on combining glottal
U+0313 + any(graveKeys) > context beep

U+0301 + any(graveKeys) > context beep c no stacking on acute
U+0301 + any(glottalKeys) > context beep

U+0300 + any(acuteKeys) > context beep c no stacking on curly apostrophe
U+0300 + any(glottalKeys) > context beep

any(acuteVowels) + any(glottalKeys) > context beep c no glottal on accented vowels
any(graveVowels) + any(glottalKeys) > context beep


c ****************
c Main
c **************

c combining keys for accents
+ [K_COLON] > U+0301 c acute
+ [K_QUOTE] > U+0300 c grave
+ [K_BKSLASH] > U+0313 c comma above

c lekwungen characters
+ [K_2] > 'ʷ'
+ [K_3] > 'ə'
+ [K_4] > 'ʔ'
+ [K_5] > 'č'
+ [K_6] > 'š'
+ [K_7] > 'x̣'
+ [K_8] > 'ƛ̓'
+ [K_9] > 'ɬ'
+ [K_0] > 'ŋ'

c letters not in lekwungen but added here to be consistant with LG layout
+ [K_BKQUOTE] > 'θ'
+ [K_1] > 'tᶿ'

c original keys with right-alt
+ [RALT K_COLON] > ";"
+ [RALT K_QUOTE] > "'"
+ [RALT K_BKSLASH] > "\"

+ [RALT K_BKQUOTE] > '`'
+ [RALT K_1] > '1'
+ [RALT K_2] > '2'
+ [RALT K_3] > '3'
+ [RALT K_4] > '4'
+ [RALT K_5] > '5'
+ [RALT K_6] > '6'
+ [RALT K_7] > '7'
+ [RALT K_8] > '8'
+ [RALT K_9] > '9'
+ [RALT K_0] > '0'

                              
nomatch > use(x)                            
group(x) using keys
